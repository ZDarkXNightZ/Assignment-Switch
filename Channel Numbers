#include <iostream>
#include <iomanip>
#include <cmath>

using namespace std;
int main()
{
int ch;

cout << "In this town, there are 5 non-cable TV channels available." << endl;
cout << "Which non-cable channel is your favorite (2, 4, 6, 8, 11) ?: ";

    cin >> ch;
cout<<"\n";

        switch(ch)
        {
        case 2:
            cout<<"Channel 2 got top ratings last week !\n";
            break;
            
        case 4:
            cout<<"Channel 4 shows primary news.\n";
            break;
            
        case 6:
            cout<<"Channel 6 shows old movies.\n";
            break;
            
        case 8:
            cout<<"Channel 8 covers local events.\n";
            break;
            
        case 11:
            cout<<"Channel 11 is for public broadcasting!\n";
            break;
            
        default:
            cout<<"That channel does not exist. It must be a cable channel.\n";
    }  
}
    
